{{#if songs}}

  <table class="ui striped table">
    <thead>
      <tr>
        <th class="four wide">Song</th>
        <th class="four wide">Artist</th>
        <th class="three wide">Genre</th>
        <th class="three wide">Duration</th>
        <th class="one wide"> </th>
        <th class="one wide"> </th>
      </tr>
    </thead>
  <tbody>
      
      {{#each songs}}
      
        {{> listOneSong playlistId=../id}}
        {{> editsong playlistId=../id}}
    
    <script>
          $(document).ready(function(){
            $("#showEdit").click(function(){
              $("#song").hide();
              $("#edit").show();
            });
            $("#hideEdit").click(function(){
              $("#song").show();
              $("#edit").hide();
            });
          });
        </script>
                
      {{/each}}
    
    </tbody>
  </table>

{{else}}
  <h3 class="ui message">
    Empty playlist!
  </h3>

{{/if}}