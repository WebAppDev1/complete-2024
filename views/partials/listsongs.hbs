{{#if songs}}

  <table class="ui striped table">
    <thead>
      <tr>
        <th class="four wide">Song</th>
        <th class="four wide">Artist</th>
        <th class="three wide">Genre</th>
        <th class="three wide">Duration</th>
        <th class="one wide"> </th>
        <th class="one wide"> </th>
      </tr>
    </thead>
  <tbody>
      
      {{#each songs}}
      
        {{> listOneSong playlistId=../id}}
        {{> editsong playlistId=../id}}
    
    <script>
          $(document).ready(function(){
            $("#showEdit{{@index}}").click(function(){
              $("#song{{@index}}").hide();
              $("#edit{{@index}}").show();
            });
            $("#hideEdit{{@index}}").click(function(){
              $("#song{{@index}}").show();
              $("#edit{{@index}}").hide();
            });
          });
    </script>
<!--    <script>
      document.querySelector("#showEdit{{@index}}").addEventListener ('click', () => {
            document.querySelector("#song{{@index}}").style.display = "none";
            document.querySelector("#edit{{@index}}").style.display = "table-row";
       })
      document.querySelector("#hideEdit{{@index}}").addEventListener ('click', () => {
            document.querySelector("#song{{@index}}").style.display = "table-row";
            document.querySelector("#edit{{@index}}").style.display = "none";
       })
    </script>-->
                
      {{/each}}
    
    </tbody>
  </table>

{{else}}
  <h3 class="ui message">
    Empty playlist!
  </h3>

{{/if}}