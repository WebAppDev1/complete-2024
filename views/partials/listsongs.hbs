{{#if songs}}

  <table class="ui striped table">
    <thead>
      <tr>
        <th class="four wide">Song</th>
        <th class="four wide">Artist</th>
        <th class="three wide">Genre</th>
        <th class="three wide">Duration</th>
        <th class="one wide"> </th>
        <th class="one wide"> </th>
      </tr>
    </thead>
  <tbody>
      
      {{#each songs}}
      
        {{> listOneSong playlistId=../id}}
        {{> editsong playlistId=../id}}
    

    <script>
      document.querySelector("#showEdit{{@index}}").addEventListener ('click', () => {
            document.querySelector("#song{{@index}}").style.visibility = "hidden";
            document.querySelector("#edit{{@index}}").style.visibility = "visible";
       })
      document.querySelector("#hideEdit{{@index}}").addEventListener ('click', () => {
            document.querySelector("#song{{@index}}").style.visibility = "visible";
            document.querySelector("#edit{{@index}}").style.visibility = "hidden";
       })
    </script>
                
      {{/each}}
    
    </tbody>
  </table>

{{else}}
  <h3 class="ui message">
    Empty playlist!
  </h3>

{{/if}}